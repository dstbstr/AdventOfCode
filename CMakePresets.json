{
    "version": 3,
  "configurePresets": [
    {
      "name": "cmake-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "environment": {
        "CMAKE_CXX_FLAGS": "$env{PRESET_COMPILER_FLAGS}",
        "CMAKE_EXE_LINKER_FLAGS": "$env{PRESET_LINK_FLAGS}"
      }
    },
    {
      "name": "msvc-x64",
      "hidden": true,
      "inherits": "cmake-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "clang-x64",
      "hidden": true,
      "inherits": "cmake-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        //"CMAKE_CXX_COMPILER": "clang++"
        "CMAKE_CXX_COMPILER": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Enterprise\\VC\\Tools\\Llvm\\x64\\bin\\clang++.exe"
      }
    },
    {
      "name": "msvc-debug",
      "displayName": "Msvc Debug",
      "inherits": "msvc-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "Msvc Release",
      "inherits": "msvc-x64",
      "environment": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "msvc-pgo-gen",
      "inherits": "msvc-release",
      "displayName": "MSVC PGO Generate",
      "environment": {
        "PRESET_COMPILER_FLAGS": "/GL",
        "PRESET_LINK_FLAGS": "/LTCG /GENPROFILE:PGD=${sourceDir}/out/build/profile.pgd"
      }
    },
    {
      "name": "msvc-pgo-use",
      "inherits": "msvc-release",
      "environment": {
        "PRESET_COMPILER_FLAGS": "/GL",
        "PRESET_LINK_FLAGS": "/LTCG /USEPROFILE:PGD=${sourceDir}/out/build/profile.pgd"
      }
    },
    {
      "name": "clang-debug",
      "displayName": "clang Debug",
      "inherits": "clang-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "environment": {
        "PRESET_LINK_FLAGS": "-v"
      }
    },
    {
      "name": "clang-release",
      "displayName": "clang Release",
      "inherits": "clang-x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
